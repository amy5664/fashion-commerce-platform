<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.AttendanceDAO">

    <!-- 오늘 날짜 출석 기록 조회 -->
    <select id="countByMemberIdAndDate" parameterType="java.util.Map" resultType="int">
        SELECT COUNT(*)
        FROM attendance_log
        WHERE member_id = #{memberId}
          AND check_in_date = #{checkInDate}
    </select>

    <!-- 출석 기록 삽입 -->
    <insert id="insertLog" parameterType="java.util.Map">
        INSERT INTO attendance_log (member_id, check_in_date)
        VALUES (#{memberId}, #{checkInDate})
    </insert>

</mapper>
